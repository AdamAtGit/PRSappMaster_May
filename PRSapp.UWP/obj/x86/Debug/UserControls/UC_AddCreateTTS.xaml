<UserControl
    x:Class="Views.UsrControls.UC_AddCreateTTS"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Views.UsrControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="640"
    d:DesignWidth="360">

    <StackPanel x:ConnectionId='2' x:Name="pnlUCAddCreateTTS" Width="360" Height="640"
                Background="Gray">
        <!--Change BorderBrush of button withImage to Orange-->
        <Button x:ConnectionId='3' HorizontalAlignment="Center" Margin="0 5"
                Height="Auto" Width="Auto" 
                BorderBrush="DarkGray"
                                                >
            <Image x:ConnectionId='5' x:Name="imgMicrophone"              
                                                                      
                   Source="/Assets/Misc/Mic-Icon-Bl-03.png"               
                   Height="70" Width="70"
                   Margin="0 0 0 0"/> 
        </Button>
        <TextBox x:ConnectionId='4' x:Name="boxInputTextToSpeak"
                 HorizontalAlignment="Center"
                 Width="340" Height="300"
                 TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>

