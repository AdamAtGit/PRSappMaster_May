<Application
    x:Class="PRSapp.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PRSapp.UWP" RequestedTheme="Light">


<Application.Resources>

        <Style TargetType="UserControl"  x:Key="ucRepeaterDefaultStyle">
            <Setter Property="Background" Value="Black"/>
        </Style>
        <Style TargetType="UserControl"  x:Key="ucRepeaterPromptStyle">
            <Setter Property="Background" Value="Black"/>
        </Style>
        <Style TargetType="UserControl"  x:Key="ucRepeaterResponseStyle">
            <Setter Property="Background" Value="Black"/>
        </Style>





        <Style TargetType="Button" x:Key="appButtonStyle">
            <Setter Property="Background" Value="Black"/>
        </Style>

        <Style TargetType="ItemsControl"  x:Key="ItemsControlStyle1">
            <Setter Property="Foreground" Value ="HotPink"/>
        </Style>

        <Style TargetType="ListViewItem"  x:Key="ListViewItem1">
            <Setter Property="Foreground" Value ="HotPink"/>
        </Style>
    </Application.Resources>

</Application>

